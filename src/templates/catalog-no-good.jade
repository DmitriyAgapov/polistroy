block content
    +b.head.wrapper.bg-white
        include ../components/hd/hd
        include ../components/hd-m/hd-m
        include ../components/hd-m/search-m-panel/search-m-panel
        include ../components/hd-m/menu-m-panel/menu-m-panel
    +b.region-top
        include ../components/block-page-title/catalog
    +b.region-main
        include ../components/main-content/main-content
        //include ../components/block-link-price/block-link-price
        include ../components/block-banner/block-banner
        include ../components/block-features/block-features

        //include ../components/block-dealer/block-dealer
        //include ../components/block-about/about
        include ../components/block-choose/block-choose
        .bg-gray
            .container
                include ../components/b-consult/b-consult
    +b.region-footer
        include ../components/ft/ft